<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grey">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".account.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".account.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="sensor" />
        <activity
            android:name=".home.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".personalHomepage.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".personalHomepage.MySearchActivity"
            android:screenOrientation="sensor" />
        <activity
            android:name=".search.SearchActivity"
            android:screenOrientation="sensor" />
        <activity
            android:name=".edit.EditActivity"
            android:screenOrientation="sensor" />
        <activity
            android:name=".accountList.FollowerActivity"
            android:screenOrientation="sensor" />
        <activity android:name=".home.NavHeaderActivity" />
        <activity
            android:name=".account.ResetActivity"
            android:label="@string/title_activity_reset"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".setting.SettingActivity"
            android:screenOrientation="sensor" />
        <activity
            android:name=".setting.BackgroundActivity"
            android:screenOrientation="sensor" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="blog.csdn.net.mchenys.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".search.ResultActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".personalHomepage.MyResultActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".home.SquareActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".home.WelcomeActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".test.TestActivity"
            android:screenOrientation="sensor"/>

        <!-- 设置环信应用的AppKey -->
        <meta-data
            android:name="EASEMOB_APPKEY"
            android:value="1110181230090660#grey" />
        <!-- 声明SDK所需的service SDK核心功能 -->
        <service
            android:name="com.hyphenate.chat.EMChatService"
            android:exported="true" />
        <service
            android:name="com.hyphenate.chat.EMJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <!-- 声明SDK所需的receiver -->
        <receiver android:name="com.hyphenate.chat.EMMonitorReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
            <!-- 可选filter -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity android:name=".accountList.SearchFriendsActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".chat.ECChatActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".test.ChatActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".chat.ConversationListActivity"
            android:screenOrientation="sensor"/>
    </application>

</manifest>