<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grey">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".account.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".account.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".home.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".personalHomepage.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="sensor"/>
        <activity android:name=".personalHomepage.MySearchActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".home.SearchActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".edit.EditActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".accountList.FollowerActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".accountList.FanActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".home.NavHeaderActivity" />
        <activity
            android:name=".account.ResetActivity"
            android:label="@string/title_activity_reset" />
        <activity android:name=".setting.SettingActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".setting.BackgroundActivity"
            android:screenOrientation="sensor"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="blog.csdn.net.mchenys.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>